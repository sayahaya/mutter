<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.mutters.any? %>
      <h3>Mutters (<%= @user.mutters.count %>)</h3>
      <ol class="mutters">
        <%= render @mutters %>
      </ol>
    <% end %>
  </div>
</div>