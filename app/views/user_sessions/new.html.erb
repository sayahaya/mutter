<% provide(:title, 'Login') %>
<div class="login">
  <h1><%= t('defaults.login') %></h1>
  <%= form_with url: login_path, class: "form", local: true do |f| %>
    <p class="field">
      <%= f.email_field :email, placeholder: User.human_attribute_name(:email) %>
      <i class="fa fa-user"></i>
    </p>
    <p class="field">
      <%= f.password_field :password, placeholder: User.human_attribute_name(:password) %>
      <i class="fa fa-lock"></i>
    </p>
    <p class="submit">
      <%= f.submit t('.title') %>
    </p>
ã€€ <% end %>
   <%= link_to t('.to_register_page'), new_user_path %>
</div>